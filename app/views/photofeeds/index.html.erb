<%= render 'landing/navigation' %>
<div class="layout_block"></div>
<div class="layout_block"></div>
<div class="container">
       		<% @all_instas.each_with_index do |insta, index| %>
       	      <% if index % 3 == 0 %>
                <div class="row">
              <% end %>
                  <div class="zoesh_box col-lg-4">
                     <div class="zoesh_box_image">
         		         		<a href="<%= @product.first.detail_page_url %>"><img src="<%= insta.photo %>"></a>
       		           </div>
       		         <div class="zoesh_box_desc">
       		               <span class="product-price">
                             <% if  @product.first.item_attributes.list_price %>
                             <%=  @product.first.item_attributes.list_price.formatted_price %> 
                             <% else %>
                             Click to see!
                             <% end %>
       		               </span>
       		             <small class="text-muted"><%= @product.first.item_attributes.brand %></small>
       		             <a href="<%= @product.first.detail_page_url %>" class="product-name"> <%= @product.first.item_attributes.title %> </a>

       		             <div class="small m-t-xs">
       		                 
       		             </div>
       		             <div class="row pull-right favor_bar">
                          <% if current_user %>
                            <% if current_user.id == @all_instas.first.user_id %>
                              <% url = "/products/#{@product.first.asin}/photofeeds/#{insta.id}" %>
                              <div style="display:inline-block;">
                                <%= button_to "delete", url, method: :delete, class: "btn btn-xs btn-default btn-outline" %>
                              </div>
                            <% end %>
                          <% end %>
       		             		<button class="btn btn-danger btn-circle btn-outline" type="button"><i class="fa fa-heart"></i>
       		                </button>
       		                <a href="<%= @product.first.detail_page_url %>" class="btn btn-xs btn-outline btn-info">Add to Cart</i></a>

       		             </div>
       		          </div>
       		     </div>
               <% if (index + 1) % 3 == 0 || index + 1 == @all_instas.count %>
                </div>
                <div class="layout_block"></div>
        <% end %>
    <% end %>
    <div class="row">
      <div class="col-sm-12">
        <%= render 'amznasins/upload' %>
      </div>
    </div>               
</div>
